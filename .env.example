# DataHub Configuration
ENRICHER_DATAHUB_GMS_URL=http://localhost:8080
ENRICHER_DATAHUB_GMS_TOKEN=

# LLM Backend: "claude-code" (default, local) or "anthropic-api" (cloud)
ENRICHER_LLM_BACKEND=claude-code

# Claude Code Configuration (only for claude-code backend)
# ENRICHER_CLAUDE_COMMAND=claude

# Anthropic API Configuration (only for anthropic-api backend)
# ENRICHER_ANTHROPIC_API_KEY=your_api_key_here
# ENRICHER_LLM_MODEL=claude-sonnet-4-5-20250929
# ENRICHER_LLM_MAX_TOKENS=4096
# ENRICHER_LLM_TEMPERATURE=0.7

# Plugin Configuration
ENRICHER_LOG_LEVEL=INFO
ENRICHER_BATCH_SIZE=10
ENRICHER_MAX_RETRIES=3

# Feature Flags
ENRICHER_ENABLE_PII_DETECTION=true
ENRICHER_ENABLE_TAG_SUGGESTIONS=true
ENRICHER_ENABLE_COLUMN_DESCRIPTIONS=true
